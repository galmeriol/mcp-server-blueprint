# MCP Server Blueprint â€” Environment Variable Reference
# Copy this file to .env and fill in your values.
# .env is gitignored and must never be committed.

# HTTP server binding
MCP_SERVER_HOST=127.0.0.1
MCP_SERVER_PORT=8000

# Base URL of the upstream REST API this server wraps
MCP_SERVER_BASE_URL=https://jsonplaceholder.typicode.com

# Request timeout in seconds (default: 30)
MCP_SERVER_TIMEOUT=30

# Authentication type: none | token_passthrough
# token_passthrough: the server forwards the bearer token from the client's
# HTTP Authorization header to the upstream API.
MCP_SERVER_AUTH_TYPE=none
